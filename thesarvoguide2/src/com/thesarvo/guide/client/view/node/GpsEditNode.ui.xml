<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:s='urn:import:com.thesarvo.guide.client.view.node'
    xmlns:n='urn:import:com.thesarvo.guide.client.view.node'
    >

  <ui:with field='r' type='com.thesarvo.guide.client.view.res.Resources'/>

  <g:HTMLPanel >
  		
  	  	<div >

  		<!--  
  		<table cellpadding='8' cellspacing='0' width='100%' >
  			<tr class='{r.s.tstr}'>
  				<td>

					<c:CellTable
			            ui:field='cellTable' />
  			
  					<g:Button ui:field='addButton' >Add Row</g:Button>
				 </td>
			</tr>
		</table>
		-->
		

		
		<table cellpadding='8' cellspacing='0' width='100%' >
  			<tr class='{r.s.tstr}'>
				 <td width='200px'>
				 	<g:Label ui:field='selectMsg' >
				 		Please select an object to edit it
				 	</g:Label>
					<g:VerticalPanel ui:field='editPanel' visible="false">
					
						<g:Label ui:field='editLabel' />
				 		
				 		<g:Label>Code</g:Label>
				 		<g:TextBox ui:field='code' />
				 		
				 		<g:Label>Description</g:Label>
				 		<g:TextArea ui:field='description' />

						<g:VerticalPanel ui:field='pointFields' visible="false">
					 		<g:Label>UTM Zone</g:Label>
					 		<g:TextBox ui:field='zone' />
					 	
					 		<g:Label>UTM Easting</g:Label>
					 		<g:TextBox ui:field='easting' />
	
					 		<g:Label>UTM Northing</g:Label>
					 		<g:TextBox ui:field='northing' />
					 		
					 		<g:Label>Height</g:Label>
					 		<g:TextBox ui:field='height' />	
	
					 		<g:Label>Latitude</g:Label>
					 		<g:TextBox ui:field='latitude' />	
	
					 		<g:Label>Longitude</g:Label>
					 		<g:TextBox ui:field='longitude' />	
				 		</g:VerticalPanel>
				 		
				 						 	
				 	</g:VerticalPanel>
				 	
				 </td>

  				<td width='*'>
					<n:MapPanel ui:field='mapPanel' />
				
  			
  					
				 </td>

			</tr>
		</table>
		
		
		<div style='font-size:7pt; margin-bottom:8px' ui:field='linksDiv' >

			<g:Anchor ui:field='googleEarthAnchor' title='Click to download a KML file that will open in Google Earth or can be loaded into your GPS' >Show in Google Earth</g:Anchor>
		</div>
		
	</div>	
  		
  </g:HTMLPanel>
  
 
</ui:UiBinder>