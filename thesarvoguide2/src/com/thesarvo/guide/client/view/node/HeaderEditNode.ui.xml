<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:s='urn:import:com.thesarvo.guide.client.view.node'>

  <ui:with field='r' type='com.thesarvo.guide.client.view.res.Resources'/>
  
  <g:HTMLPanel >
 
  
	<h1 class='heading1'><s:BoundLabel bindValue='@name' /></h1>
 	<table cellpadding='4' cellspacing='0' width='100%' >

		<tr >
			<td width='100px'>Name </td>
			<td><s:BoundTextBox bindValue='@name' ui:field='name' styleName='{r.s.faTextBox}' /> </td>
		</tr>

		<tr >
			<td>Walk </td>
			<td><s:BoundTextBox bindValue='@walk' ui:field='walk' styleName='{r.s.faTextBox}' /> </td>
		</tr>
		<tr >
			<td>Sun </td>
			<td><s:BoundTextBox bindValue='@sun' ui:field='sun' styleName='{r.s.faTextBox}' /> </td>
		</tr>
		<tr >
			<td>Rock </td>
			<td><s:BoundTextBox bindValue='@rock' ui:field='rock' styleName='{r.s.faTextBox}' /> </td>
		</tr>

	 	<tr  > 
	 		<td  >Acknowledgement</td>
	 		<td><s:BoundTextArea  bindValue='@acknowledgement'  ui:field='acknowledgement' styleName='{r.s.textArea}' /></td>
	 	</tr>
	 	<tr  >
	 		<td >Introduction</td>
	 		<td><s:BoundTextArea bindValue='@intro'  ui:field='intro' styleName='{r.s.textArea}' /></td>
	 	</tr>
	 	<tr  >
	 		<td >History</td>
	 		<td><s:BoundTextArea bindValue='@history' ui:field='history' styleName='{r.s.textArea}' /></td>
	 	</tr>
	 	<tr  >
	 		<td  >Access</td>
	 		<td><s:BoundTextArea bindValue='@access' ui:field='access' styleName='{r.s.textArea}' /></td>
	 	</tr>
	 	
	 	<tr  >
	 		<td  >Camping</td>
	 		<td><s:BoundTextArea bindValue='@camping' ui:field='camping' styleName='{r.s.textArea}' /></td>
	 	</tr>
	 	
	 	<tr  >
	 		<td>Options</td>
	 		<td>
	 			<s:BoundCheckBox bindValue='@autonumber' ui:field='autonumber'  /> Auto number
	 		</td>
	 	</tr>
	 </table>
	 	
  </g:HTMLPanel>
 
</ui:UiBinder>